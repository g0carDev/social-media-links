---
interface Props {
	title: string;
}
import '@fontsource/libre-barcode-39-extended-text';
import '@fontsource-variable/inter';
const { title } = Astro.props;
---

<!doctype html>
<html lang="es" class="">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="relative">
		<div class="absolute top-0 bottom-0 z-[-2] min-h-screen w-full h-full bg-white dark:bg-slate-900 bg-[linear-gradient(to_right,#8080800a_1px,transparent_1px),linear-gradient(to_bottom,#8080800a_1px,transparent_1px)] bg-[size:14px_24px]">
			<div class="absolute left-0 right-0 top-0 -z-10 m-auto h-[310px] w-[310px] rounded-full bg-yellow-300 dark:bg-blue-500 opacity-20 blur-[100px]"></div>
		</div>
		<slot />
	</body>
</html>
<style is:global>
	:root {
		color-scheme: light dark;
	}
	*::selection{
		background: #000;
		color: #fff;
	}
	html {
		font-family: 'Inter Variable', code;
		scroll-behavior: smooth;
	}
	body {
		overscroll-behavior: none;
	}

	.text-barcode{
		font-family: 'Libre Barcode 39 Extended Text', cursive;
	}

	@media (prefers-reduced-motion: reduce) {
		html {
			scroll-behavior: auto;
		}
	}
</style>
